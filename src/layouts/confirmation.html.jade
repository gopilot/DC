html(style="width: 100%; height: 100%;")
    head
        meta(charset='utf8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
        meta(name='description', content='Your registration is complete!')
        meta(property='og:title', content="PilotDC - What can you build in a day?")
        meta(property="og:url", content="http://dc.gopilot.org/")
        meta(property="og:site_name", content="PilotDC")
        meta(property="og:type", content="event")
        meta(property="og:image", content="http://dc.gopilot.org/img/logo_fb.png")
        meta(name='author', content= "Pilot")
        meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1")

        title="Registration Complete!"

        link(rel='stylesheet', href='/css/font-awesome/css/font-awesome.css')
        link(rel='stylesheet', href='/css/confirmation.css')
        script.
            var fb_param = {};
            fb_param.pixel_id = '6012903874317';
            fb_param.value = '0.01';
            fb_param.currency = 'USD';
            (function(){
            var fpw = document.createElement('script');
            fpw.async = true;
            fpw.src = '//connect.facebook.net/en_US/fp.js';
            var ref = document.getElementsByTagName('script')[0];
            ref.parentNode.insertBefore(fpw, ref);
            })();
        noscript
            img(height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/offsite_event.php?id=6012903874317&amp;value=0.01&amp;currency=USD")
    body
        div.wrap.full
            h2.center.serif#title We'll see you at #{document.title}!
            h4.center.sans-serif Look for an email in the next few weeks with more details
            ol#actions 
                span.serif#list-title What now?
                li Join the Facebook event to recieve updates!
                div.button-container
                    a(href=document.facebook_event class="button" id="eventButton" target="_blank")
                        i(class="fa fa-calendar")
                        span(class="button-text") Facebook Event >
                li Invite your friends!
                div.button-container
                    a(href="https://twitter.com/share?url="+encodeURIComponent(document.share_url)+"&text="+encodeURIComponent(document.tweet) class="button" id="tweet" target="_blank")
                        i(class="fa fa-twitter")
                        span(class="button-text") Tweet             
                    a(href="https://www.facebook.com/sharer/sharer.php?u="+encodeURIComponent(document.share_url) class="button" id="share" target="_blank")
                        i(class="fa fa-facebook")
                        span(class="button-text") Share
