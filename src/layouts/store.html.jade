!!!
html
	head
		meta(charset='utf8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
		meta(name='description', content='The Pilot Store')
		meta(property='og:title', content="PilotDC - What can you build in a day?")
		meta(property="og:url", content="http://dc.gopilot.org/store/")
		meta(property="og:site_name", content="PilotDC")
		meta(property="og:type", content="event")
		meta(property="og:image", content="http://dc.gopilot.org/img/logo_fb.png")
		meta(name='author', content= "Pilot")
		meta(name="viewport", content="width=device-width, user-scalable=no, initial-scale=1, maximum-scale=1")

		title="Store | PilotDC"

		link(rel='stylesheet', href='/css/font-awesome/css/font-awesome.css')
		link(rel='stylesheet', href='/css/bootstrap/css/bootstrap.css')
		link(rel='stylesheet', href='/css/store.css')
	body
		div#mobileFloat
			span.total.js-price $0.00
			span.checkout.js-checkoutButton
				span.fa.fa-shopping-cart
				span.text Checkout

		section.blue#header
			.wrap
				.pull-left
					span.title Preorder T-Shirts
				.pull-right
					span.total.js-price $0.00
					span.checkout.js-checkoutButton
						span.fa.fa-shopping-cart
						span.text Checkout
		section.light#body
			.wrap
				div.center Order now, and then pick up your shirts at PilotDC!
				.container
					.col-sm-4
						select(class='selectpicker form-control' title='Choose a size...')
							option Choose a size...
							option Small
							option Medium
							option Large
							option Extra Large

						.item#ladies
							div.check.fa.fa-check-circle
							div.overlay-text
								div.text-inner
									div.title Ladies' Shirt
									div.price $15.00
									div.click (Click to Select)
				
					.col-sm-4
						select(class='selectpicker form-control' title='Choose a size...')
							option Choose a size...
							option Small
							option Medium
							option Large
							option Extra Large

						.item#hoodie
							div.check.fa.fa-check-circle
							div.pre-order-only 
								span Pre-order only! 
							div.overlay-text
								div.text-inner
									div.title Unisex Hoodie
									div.price $30.00
									div.click (Click to Select)

					.col-sm-4
						select(class='selectpicker form-control' title='Choose a size...')
							option Choose a size...
							option Small
							option Medium
							option Large
							option Extra Large

						.item#unisex
							div.check.fa.fa-check-circle
							div.overlay-text
								div.text-inner
									div.title Unisex Shirt
									div.price $15.00
									div.click (Click to Select)
			<form id="MySelector">
			<input type="text" name="givenname" placeholder="Name">
			<input type="text" name="message" placeholder="Message">
			<input type="submit">
			</form>

		div#popup
			div.form-container
					div.close.fa.fa-times#js-closeForm
					div.inputs.form-inline
						form#checkoutForm
							div.form-group#nameGroup
								input(type="text" name="name" class="form-control" placeholder="Name" id="nameField")
							div.form-group#emailGroup
								input(type="email" name="email" class="form-control" placeholder="Email" id="emailField")
							input(type="hidden" name="order" id="orderField" value="")
							input(type="hidden" name="total" id="totalField" value="0")
							input(type="hidden" name="paid" id="paidField" value="false")
							input(type="hidden" name="stripe" id="stripeField" value="")
							input(type="submit" name="submit" id="js-submitForm" style="display: none;")
					div.button.double#js-orderButton
						div.half-button.left#left-button 
							i.fa.fa-credit-card
							span Pay online
						div.half-button.right#right-button 
							i.fa.fa-money
							span Pay at event
		
		<script src="//checkout.stripe.com/checkout.js"></script>
		<script src="https://s3.amazonaws.com/fireform/fireform.min.js"></script>
		<script data-main="/js/store.js" src="/js/require.js"></script>
		<script  src="https://s3.amazonaws.com/fireform/fireform.min.js"></script>
		<script >
		/* See more options at http://fireform.org/docs */
		var options = {
		simpleValidation:false,
		formValidationClass:"custom-submit-success",
		callback:function(err, val){ console.log(err,"callback") }
		}
		new Fireform('#MySelector', 'http://fireform.org/list/152/DC_Shirts', options)
		</script>