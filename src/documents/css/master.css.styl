
@import 'nib'
@import '_settings'
@import '_fonts'

blue = #78BAE2
bordersize = 2px
borderdist = -10px
bordertopoffset = 115px
maxwidth = 1200px
global-reset()

body
    background blue
    color white
    font-family DIN
    font-weight 200
    font-size 22px
    line-height 1.4

a
    text-decoration none
    cursor pointer

    &:hover
        border-bottom 1px solid blue

strong
    font-weight 500


#wrapper
    position relative
    max-width 1100px
    margin 0px auto


.image-bg
    width 200%
    height 200%
    position absolute
    top -50%
    left -50%

    img
        min-width 50%
        min-height 50%
        position absolute
        top 25%
        left 25%

.borderwrap
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    box-sizing border-box
    padding 0 10px

.borders
    box-sizing border-box
    padding 0px
    position relative
    max-width maxwidth + 40
    margin 0px auto
    height 100%
    margin-bottom 20px
    .l,.r,.b
        display none
    div
        background white
        position absolute
        z-index 10
    .l,.r
        width 0
        background white
        position absolute
        top bordertopoffset
        bottom borderdist

    .l
        left 0px

    .r
        right 0px

    .t,.b
        border-bottom bordersize solid white
        left 0px
        right 0px
        height bordersize
        padding 0
        box-sizing border-box

    .t
        top bordertopoffset
        border-bottom-width 4px

    .b
        bottom borderdist

p
    margin 19px 0

h1,h2,h3,h4,h5,h6
    font-weight normal
h1
    font-family: Clarendon;
    font-size: 102px;
    text-shadow: 1px 2px 0px #000000;
    margin-bottom: 0

h2
    font-family: DIN
    font-weight 200
    font-size: 56px
    margin .5em 0
    

h3
    font-family: DIN 
    font-weight 200
    font-size: 34px
    margin-top: 0

h1 + h3
    margin-top: 15px

h4
    font-family Clarendon
    font-size 40px
    margin .5em 0
    text-transform uppercase


.section
    background-size cover
    background-position center center
    background-repeat no-repeat
    width 100%
    overflow hidden
    position relative
    padding 20px 0px 35px 0px
    box-sizing border-box

    a
        color white

    &.blue
        a
            border-bottom 1px solid rgba(255,255,255,.4)

            &:hover
                border-bottom-color white

    &.even
        padding-bottom 20px

    &.white
        background white
        color #444

        a
            color blue

    &.dark
        background #333
        color white
        a
            color blue


.wrap, header 
    max-width maxwidth
    margin 0px auto

.content
    max-width 900px

.upper
    text-transform uppercase

.small
    font-family DIN
    font-size 18px

.sans-serif
    font-family DIN
    font-weight 400

.sans-serif-thin
    font-family DIN
    font-weight 200

.serif
    font-family Clarendon

.center
    margin 0px auto
    text-align center

.pull-left
    display inline
    float left

.pull-right
    display inline
    float right

.pull-bottom
    position absolute
    bottom 0

    &.pull-right
        right 0

    &.pull-left
        left 0

    &.center
        left 0
        right 0

.vertical-align
    position absolute
    top 0
    bottom 0
    margin auto

    &.pull-right
        right 0

    &.pull-left
        left 0

    &.center
        left 0
        right 0
        text-align center

.button
    buttongrad=linear-gradient(rgba(0,0,0,0), rgba(0,0,0,.1))
    background white
    font-family DIN
    font-weight 500
    font-size 29px
    color blue
    padding 20px 23px 19px 23px
    text-transform uppercase
    display inline-block
    margin-right 25px
    text-decoration none
    background-image linear-gradient(#fff, #ddd)
    border 1px solid white
    cursor pointer

    &:hover
        border 1px solid #fff

    &.white
        color blue

    &.blue
        background blue buttongrad
        border 1px solid blue
        color white !important

        &:hover
            border 1px solid white

    &.small
        padding 0
        background transparent
        font-family DIN
        font-size 18px
        position relative
        bottom 3px
        border 0px
        border-bottom 0px

        &:hover
            border-bottom 1px solid white

    &.left
        display inline
        float left

    &.right
        display inline
        float right

.wrap
    padding 0 50px
    box-sizing border-box

.leader
    line-height 1
    padding-top 170px
    padding-bottom 50px

    h3
        line-height 1.4

    a
        color: blue

    .subhead
        overflow hidden
        height 100%
        line-height 100%
        position relative
        margin-top 10px
        .button.pull-right
            display block
            position absolute
            right 40px
            height 29px
#headwrap
    padding 0 25px
    padding-top 26px
    position absolute 
    top 0
    left 0
    width 100%
    box-sizing border-box
    z-index 10

header
    box-sizing border-box
    width 100%
    text-align center
    position relative
    clearfix()


    nav
        width 100%
        >div
            position absolute
            bottom 30px
            box-sizing border-box


            &.left
                left 0
                right 50%
                text-align right
                padding-right 100px

            &.right
                right 0
                left 50%
                text-align left
                padding-left 100px

            a
                margin 0 0px
                color white
                text-shadow 1px 1px 0 rgba(0,0,0,.5)
                font-size 24px
                font-family DIN
                font-weight 100
                padding 0 30px
                padding-bottom 8px
                text-transform uppercase
                transition all .1s
                &:hover
                    color blue
                    border-bottom-color white
                    border-bottom 4px solid blue

    h1
        text-indent -9999px
        display inline-block
        margin-bottom 0
        margin-top 0
        line-height 143px
        height 90px !important 
        font-size 102px
        a
            height 90px
            width 140px
            display block
            background url(../img/arc.png) center center no-repeat
            background-size contain
            &:hover
                border 0px

.register
    line-height 100%
    padding-bottom 20px
    text-align center
    margin-right 25px

    .wrap
        height 100%
        min-height 94px
        overflow hidden

    h4
        height 100%
        line-height 100%
        margin-top 22px
        font-size 45px
    
    .register-link
        clear both
        float right
        width 100%
        margin-top 5px

        a
            border-bottom 2px dotted blue

            &:hover
                border-bottom 2px solid blue


    a.register-button
        clear both
        float right
        margin-right 0px

.sponsors
    .sponsor-logos
        min-height 300px

    h4
        margin-bottom 0px

.sponsor-logo
    display block
    max-width 100%
    background-size 100%
    background-repeat no-repeat
    margin-bottom 50px
    transition: background-image 0.5s;
    -webkit-transition: background-image 0.5s; /* Safari */
    margin: 25px

    &.half
        display inline-block

    &.center
        display block
        margin auto

#microsoft
    background-image url(/img/sponsors/microsoft-black.png)
    height 250px
    width 679px
    &:hover
        background-image url(/img/sponsors/microsoft-color.png)
        border-bottom none

#dc-tech
    background-image url(/img/sponsors/dctech-black.png)
    width 225px
    height 150px
    &:hover
        background-image url(/img/sponsors/dctech-color.png)
        border-bottom none

#modev
    background-image url(/img/sponsors/modev-black.png)
    height 120px
    width 368px
    &:hover
        background-image url(/img/sponsors/modev-color.png)
        border-bottom none




.sponsor-email
    margin-bottom 30px

#eventAddress
    width: 25%
    margin-top 25px
    float: left
    min-width 230px

#judges
    .wrap
        max-width 1400px
        padding 0px 20px

    .judge-wrap
        display block
        margin auto
        text-align center

        &:first-child
            margin-left 0px

        &:last-child
            margin-right 0px

        .judge-cell
            display inline-block
            width 230px
            margin 8px

            &:first-of-type
                margin-left 0px

            &:last-of-type
                margin-right 0px

            .judge-profile
                display block
                width 230px
                height 240px
                transition background-position 0.75s
                overflow hidden

                .judge-bio
                    width 210px
                    height 220px
                    padding 10px
                    position relative
                    display block
                    text-align center
                    font-size 17px
                    line-height 21px
                    color white
                    left -230px
                    transition left 0.75s
                    overflow hidden
 
                &:hover
                    background-position-x 230px

                &.hover //So js can trigger it on mobile by adding the hover class
                    background-position-x 230px

                &:hover .judge-bio
                    left 0px

                &.hover .judge-bio //So js can trigger it on mobile by adding the hover class
                    left 0px

            .judge-name
                display block
                margin-top 3px
                width 100%
                text-align center
            #dan-berger
                background-image url(/img/judges/dan_berger.jpg)

            #brittany-heyd
                background-image url(/img/judges/brittany_heyd.jpg)

        

#eventMap
    margin-left 5%
    margin-top 25px
    width 65%
    height 500px
    overflow hidden

.faq
    h5
        font-size 1.2em
        margin-bottom 0
    p
        margin-top 0
        font-family DIN

.schedule
    clearfix()
    .wrap>div
        // 40% because giving a full half felt a little spaced out
        width 40%
        float left
        &:last-child
            width 60%


    time
        float left
        font-family: Clarendon
        width 90px
        margin-right 15px
        opacity .7 
    li
        clear both
        font-size 26px

    h5
        font-weight 200
        text-transform uppercase
        display inline
        padding-bottom 3px
        border-bottom 2px solid white

.prizes
    padding-bottom 0
    h4
        text-align center
        border-bottom 2px solid white

    ol
        padding 0
        margin 0
        list-style none
        text-align center
    li
        font-family Clarendon
        text-align center
        display inline-block
        margin 0px auto
        font-size 1.7em
        sup
            font-size .4em
        &:first-child
            font-size 2.7em
            display block
            margin-bottom .3em
            float none

        &:nth-child(2)
            margin-right 50px

        div
            margin 0px auto
            display inline-block
        span
            width 1.2em
            height 1.2em
            margin-top 10px
            text-align center
            margin 0px auto
            display block
            border-bottom 1px solid white

    .other
        padding 0
        border-top 2px solid white
        margin-top 1.5em
        margin-bottom 15px
        text-align center
        li
            padding 20px 25px 10px 20px
            display inline-block
            margin 0px auto
            width auto
            height 100%
            text-align left
            border-right 2px solid white

            &:first-child
                border-left 2px solid white

            h5
                font-family DIN
                margin-top 0
                font-size 30px

            span
                font-size 20px
                border 0px
                text-transform uppercase
                text-align left
                margin 0
                width auto
                height auto

            div
                margin 0
                display block

    h5
        font-family Clarendon
        margin .3em 0 0 0 

    p
        font-size .6em
        margin-top -.4em
        font-family DIN

@import '_mq'
