@import 'nib'
@import '_settings'
@import '_fonts'

blue = #78BAE2
dark-blue = #589AC2
green = #7fc028
dark-green = #5FA00B
bordersize = 2px
borderdist = -10px
bordertopoffset = 115px
maxwidth = 1200px
global-reset()

html
    width 100%
    height 100% !important

body
    width 100%
    height 100%
    color white
    font-family DIN
    font-weight 200
    font-size 22px
    line-height 1.4

a
    text-decoration none

    &:hover
        border-bottom 1px solid blue

strong
    font-weight 500

section
	width 100%
	padding 20px 0px

	&.light
		background white
		color #333

	&.dark
		background #333
		color white

	&.blue
		background blue
		color white

#wrapper
    position relative
    max-width 1200px
    margin 0px auto

p
    margin 19px 0

h1,h2,h3,h4,h5,h6
    font-weight normal
h1
    font-family: Clarendon;
    font-size: 102px;
    text-shadow: 1px 2px 0px #000000;
    margin-bottom: 0

h2
    font-family: DIN
    font-weight 200
    font-size: 56px
    margin .5em 0
    

h3
    font-family: DIN 
    font-weight 200
    font-size: 34px
    margin-top: 0

h1 + h3
    margin-top: 15px


.black
    color #333

.blue
    color blue

.white
    color white

.wrap, header 
    max-width maxwidth
    margin 0px auto

.content
    max-width 900px

.upper
    text-transform uppercase

.small
    font-family DIN
    font-size 18px

.sans-serif
    font-family DIN
    font-weight 400

.sans-serif-thin
    font-family DIN
    font-weight 200

.serif
    font-family Clarendon

.center
    margin 0px auto
    text-align center

.pull-left
    display inline
    float left

.pull-right
    display inline
    float right

.pull-bottom
    position absolute
    bottom 0

    &.pull-right
        right 0

    &.pull-left
        left 0

    &.center
        left 0
        right 0

.vertical-align
    position absolute
    top 0
    bottom 0
    margin auto

    &.pull-right
        right 0

    &.pull-left
        left 0

    &.center
        left 0
        right 0
        text-align center

#header
	overflow hidden

	.wrap
		overflow hidden
		position relative

	.title
		font-family Clarendon
		font-size 70px
		position relative
		top 10px

	.pull-right
		padding-bottom 0px
		position absolute
		bottom 0
		right 0

.total
	height 100%
	line-height 100%
	margin-right 10px
	position relative
	top -10px
	font-size 40px

.checkout
	position relative
	display inline-block
	background white
	width 50px
	height 50px
	border-radius 26px
	overflow hidden
	color blue
	text-align center
	line-height 50px
	vertical-align center
	cursor pointer
	transition width 1s

	.fa
		float left
		width 50px
		height 49px
		line-height 100%
		padding-top 13px

	.text
		position absolute
		left 50px

	&:hover
		width 158px

	&:active
		background #333

#mobileFloat
	display none
	position fixed
	width 100%
	top 0
	border 1px solid black
	border-top none
	background rgba(100, 100, 100, 0.85)
	text-align center
	padding 10px 0px
	z-index 99

.container
	margin-top 10px

	.col-sm-4
		display block
		padding 0px 3px

select
	display block
	width 100%
	margin auto
	opacity 0
	transition opacity 1s
	pointer-events none
	font-size 20px

	&.visible
		opacity 1
		pointer-events auto

// nib's @2x image mixins
#unisex
	image '/img/shirts/unisex.png'

#ladies
	image '/img/shirts/ladies.png'

#hoodie
	image '/img/shirts/hoodie.png'

.item
	border 5px solid white
	position relative
	margin 10px 0px
	cursor pointer
	height 600px
	background-size cover
	background-position center
	overflow hidden

	&:hover .overlay-text, &.show-overlay .overlay-text, &.selected .overlay-text
		top 0

	&.selected
		border-color green

	.check
		color green
		font-size 50px
		position absolute
		top 3px
		left 10px
		display none

		&.visible
			display block

	.pre-order-only
		position absolute
		width 220px
		height 220px
		top -110px
		right -110px
		0px
		transform rotate(45deg)
		background green
		text-align bottom
		span
			position absolute
			bottom 0
			width 100%
			text-align center
			font-weight 500

	.overlay-text
		position absolute
		width 100%
		height 100%
		top 100%
		left 0
		padding-top 100px
		background linear-gradient(top, 40% rgba(0, 0, 0, 0), rgba(0, 0, 0, 1));
		transition top 1s

		.text-inner
			width 100%
			margin-bottom 10px
			position absolute
			left 0
			bottom 0

			.title
				width 100%
				text-align center
				font-size 30px
				font-weight 500
				font-family Clarendon
				color blue

			.price
				width 100%
				text-align center
				font-size 30px
				font-weight 500
				font-family Clarendon
				color #333
				color white

			.description
				width 100%
				text-align center
				color white

			.click
				width 100%
				text-align center
				color blue

#popup
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background rgba(0, 0, 0, 0.75)
	z-index 999
	opacity 0
	transition opacity .5s
	pointer-events none

	&.shown
		opacity 1
		pointer-events auto

	&.shown .form-container
		top 50%


	.above
		position relative
		top 0
		z-index 2
		transition opacity 0.5s
		transition-delay 0s
		opacity 0.0

		&.visible
			opacity 1.0
			transition-delay 1s

		// &.invisible
		// 	opacity 0.0
	.form-container
		display block
		position absolute
		top 150%
		left 50%
		width 550px
		margin-left -275px //offset width
		height 280px
		margin-top -140px //offset height
		padding 25px
		border-radius 10px
		background #fff
		transition top 1s



		.close
			position absolute
			top 3px
			left 10px
			font-size 40px
			opacity 0.7
			color gray
			transition opacity 0.5s
			transition color 0.5s

			&:hover
				color black
				opacity 1.0

	.inputs
		margin auto

		.form-group
			width 100%

		input
			height 50px
			padding 15px
			font-size 30px
			width 85%
			display block
			margin 20px auto
			text-align center


	.button
	    display inline-block
	    width 100%
	    box-sizing border-box
	    height 60px
	    padding 15px
	    border-radius 10px
	    color white
	    font-size 26px
	    text-align center
	    vertical-align center
	    background blue
	    line-height 100%
	    position relative
	    cursor pointer
	    transition background 1s
	    
	    i
	    	margin 0px 10px
	    
	    &:hover
	        text-decoration none
	        border-bottom none
	        background dark-blue

	    &.double
	    	padding 0px
	    	.half-button
	    		width 50%
	    		padding 15px
	    		height 100%
	    		&.left
		    		float left
		    		border-top-left-radius 10px
		    		border-bottom-left-radius 10px
		    		background blue
		    		&:hover
		    			background dark-blue

		    	&.right
		    		float right
		    		border-top-right-radius 10px
		    		border-bottom-right-radius 10px
		    		background green
		    		&:hover
		    			background dark-green
// Tablet and smaller styles
@media only screen and (max-device-width : 1024px)
	.item
		background-size auto 100% !important
	.wrap
		margin 0px 10px
	.checkout
		width 158px


// Mobile styles
@media only screen and (max-device-width : 480px)
	.item
		height 400px

	#header
		.pull-left
			float none
			margin auto
			margin-top 50px
		.pull-right
			display none

	#mobileFloat
		display block

	#popup
		.form-container
			width 96%
			left 0
			margin-left 2%
			.button
				height 75px
		

