@import '_settings'


// smaller header
@media(max-width: 1200px)
    h1
        font-size 82px
    h2
        font-size 45px
    h3
        font-size 30px
    header
        h1
            height 90px !important
            font-size 102px

    .register 
        h4
            font-size 30px

        .button
            font-size 20px
            padding-top 12px
            padding-bottom 15px


@media(max-width: 1000px)
    .schedule .wrap>div
        width 50%
    .prizes
        padding-bottom 20px
        .other
            li
                h5 
                    font-size 25px

                span
                    display block
                    font-size 18px

@media(max-width: 900px)
    h1
        font-size 62px
    h2
        font-size 37px
    h3
        font-size 26px
    .wrap
        padding-left 40px
        padding-right 40px
    header
        nav div
            a
                font-size 20px

    .prizes
        .other
            padding-top 10px
            li
                display block
                h5,span
                    text-align center
                padding 0
                margin .5em 0
                border-width 0px !important

    #footer
        .center
            .button:last-of-type
                margin-top 25px


@media(max-width: 840px)   
    h1
        font-size 62px
    h3
        font-size 26px
    .button
        font-size 20px
        padding 13px 14px 12px 14px
        &.small
            font-size 15px
    header
        nav div
            a
                font-size 20px
        h1
            padding 0 15px
            a
                width 200px
                height 90px

                background-size contain

    .register
        h4
            font-size 25px

    #eventAddress
        width 100%
        text-align center
        margin auto
        margin-bottom 20px

    #eventMap
        width 100%
        margin auto

@media(max-width: 768px)
    #headwrap
        padding 0 10px
    .borders
        display none

    .button
        display block
        text-align center
        margin 0 10px

        &.small
            display inline-block

            &:hover
                border 0

    .wrap
        padding-left 10px
        padding-right 10px
    h1
        font-size 28px
    h2
        font-size 28px
    h3
        font-size 17px
        margin-top 10px

    .leader
        padding-top 190px
        padding-bottom 30px

    header
        border-bottom 2px solid white
        h1
            border 0px
            margin-bottom -40px
            margin-top 20px
            font-size 28px
        nav 
            div
                position static
                padding 0 !important

                &.left, &.right
                    margin-left 0
                    margin-right 0
                    display inline-block

                a
                    padding 15px 10px
                    margin 0
                    font-size 15px

                    &:hover
                        border 0

            border-top 2px solid white
            padding 10px 0

    .schedule .wrap>div
        li
            font-size 23px
            p
                margin 12px 0


@media(max-width: 670px)
    .register
        text-align center
        line-height 1.1
        .wrap > *
            display inline-block
            float none


@media(max-width: 550px)
    .schedule .wrap>div
            margin 30px 0
            width 100%
            float none

    .schedule .wrap>div:last-child
        width: 100%

    .prizes
        li
            font-size 1.1em
            display block
            margin-right 0 !important
            margin-bottom 0 !important

            &:first-child
                font-size 2em


